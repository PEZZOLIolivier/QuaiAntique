{% extends 'base.html.twig' %}

{% block title %}Quai Antique - Carte & Menus{% endblock %}

{% block body %}
    <h2 class="text-center py-3 mb-3 text-capitalize text-decoration-underline display-1">Carte & Menus</h2>

    <div class="row bg-light shadow m-2 py-3 border rounded-3 justify-content-center">
        <h3 class="text-center py-3 mb-3">Nos Menus</h3>
        {%  for menu in dishes_menu %}
            {% if menu.isPublish == true %}
                <div class="row g-0">
                    <div class="col-12 col-lg-2 mb-2 mb-lg-0">
                        <img class="img-fluid rounded-3"
                             src="{{ asset('pictures/photos/' ~ menu.photo.picture ) }}"
                             data-src="{{ asset('pictures/photos/' ~ menu.photo.picture ) }}"
                             data-toggle="lightbox"
                             alt=""
                        >
                    </div>
                    <div class="col-9 col-lg-2 my-auto px-1 text-decoration-underline"><b>{{ menu.name }}</b></div>
                    <div class="col-3 col-lg-1 my-auto px-1 order-lg-last text-lg-end">{{ (menu.price/100)|format_currency('EUR')}}</div>
                    <div class="col-12 col-lg-7 py-2 my-auto px-1"><i>{{ menu.description}}</i></div>
                </div>
                <hr class="my-1">
            {% endif %}
        {% endfor %}
    </div>

    <div class="row bg-light shadow m-2 py-3 border rounded-3 justify-content-center">
        <h3 class="text-center py-3 mb-3">Notre carte</h3>
        {% for category in categories %}
            {% if category.isActive == true %}
                <h4 class="text-center pb-3">{{ category.name }}</h4>
                {% for dish in dishes_dish %}
                    {% if dish.category == category %}
                        <div class="row g-0 my-lg-1 ">
                            <div class="col-12 col-lg-2 mb-2 mb-lg-0">
                                <img class="img-fluid rounded-3"
                                     src="{{ asset('pictures/photos/' ~ dish.photo.picture ) }}"
                                     data-src="{{ asset('pictures/photos/' ~ dish.photo.picture ) }}"
                                     data-toggle="lightbox"
                                     alt=""
                                >
                            </div>
                            <div class="col-9 col-lg-2 my-auto px-1 text-decoration-underline"><b>{{ dish.name }}</b></div>
                            <div class="col-3 col-lg-1 my-auto px-1 order-lg-last text-lg-end">{{ (dish.price/100)|format_currency('EUR')}}</div>
                            <div class="col-12 col-lg-7 py-2 my-auto px-1"><i>{{ dish.description}}</i></div>
                        </div>
                        <hr class="my-2">
                    {% endif %}
                {% endfor %}
            {% endif %}
        {% endfor %}
    </div>

{% endblock %}