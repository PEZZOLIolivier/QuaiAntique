{% extends 'base.html.twig' %}

{% block title %}Réinitialisez votre mot de passe{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <h1 class="h3 mb-3 font-weight-normal text-center text-decoration-underline">Réinitialisez votre mot de passe</h1>

    {{ form_start(requestForm) }}
        {{ form_row(requestForm.email) }}
        <div>
            <small>
                Entrez votre adresse email afin de recevoir un courrier pour la réinitialisation de votre mot de passe
            </small>
        </div>
    <div class="row justify-content-center">
        <button class="col container-button col-6 btn btn-outline mx-1 my-3 hover">Envoi d'un email de réinitialisation du mot de passe</button>
    </div>

    {{ form_end(requestForm) }}
{% endblock %}
